<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roomlist_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">
    <!--android:background="@color/colorPrimary"-->

    <LinearLayout
        android:id="@+id/ll_room"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:weightSum="1">
        <!--android:background="@drawable/room_background_green"-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.95">

            <TextView
                android:id="@+id/room_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/title_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/prices_string"/>

            <TextView
                android:id="@+id/room_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/title_avails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/today_string"/>

            <TextView
                android:id="@+id/room_avails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_gravity="center"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"/>

            <!--TextView
                android:id="@+id/tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:layout_gravity="center"
                android:layout_marginStart="2dp"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:textColor="@color/colorPrimary"/-->

        </LinearLayout>

        <!--Button
            android:id="@+id/book_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/book_room"
            android:layout_weight="0.15"
            android:layout_gravity="center_vertical"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"/-->

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.05">

            <ImageButton
                android:id="@+id/escape_tick"
                android:layout_width="@dimen/room_btn_size"
                android:layout_height="@dimen/room_btn_size"
                android:layout_gravity="center"
                android:background="@drawable/room_not_done"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="7dp"/>

            <ImageButton
                android:id="@+id/book_btn"
                android:layout_width="@dimen/room_btn_size"
                android:layout_height="@dimen/room_btn_size"
                android:layout_gravity="center"
                android:background="@drawable/book_room"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <!--TextView
        android:id="@+id/row_div"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorPrimary"/-->

</LinearLayout>