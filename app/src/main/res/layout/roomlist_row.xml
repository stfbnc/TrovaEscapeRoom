<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/roomlist_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginEnd="5dp">

        <TextView
            android:id="@+id/room_color"
            android:layout_width="15dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="3dp"
            android:layout_marginBottom="3dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/room_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/room_btn_size"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_toStartOf="@id/escape_tick"/>

                <ImageButton
                    android:id="@+id/escape_tick"
                    android:layout_width="@dimen/room_btn_size"
                    android:layout_height="@dimen/room_btn_size"
                    android:layout_gravity="center"
                    android:background="@drawable/room_not_done"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp">

                <TextView
                    android:id="@+id/title_prices"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/room_btn_size"
                    android:gravity="start|bottom"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold"
                    android:text="@string/prices_string"
                    android:layout_toStartOf="@id/book_btn"/>

                <ImageButton
                    android:id="@+id/book_btn"
                    android:layout_width="@dimen/room_btn_size"
                    android:layout_height="@dimen/room_btn_size"
                    android:layout_gravity="center"
                    android:background="@drawable/book_room"
                    android:layout_alignParentEnd="true"/>

            </RelativeLayout>

            <TextView
                android:id="@+id/room_prices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/title_avails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:text="@string/today_string"/>

            <TextView
                android:id="@+id/hour_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="5dp"
                android:paddingEnd="10dp"
                android:layout_marginBottom="2dp"
                android:textColor="@color/colorPrimary"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp">

                <ImageView
                    android:id="@+id/h1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/h2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/h3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/h4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp">

                <ImageView
                    android:id="@+id/h5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/h6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/h7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/h8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginEnd="1dp"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/list_div"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorPrimary"/>

</LinearLayout>