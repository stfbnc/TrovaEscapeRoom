<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/escape_details"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/escape_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/list_div"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rooms_recycle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_gravity="center"/>

        <!--TextView
            android:id="@+id/prova"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:textColor="@color/colorPrimary"
            android:text="ciao\nciao\nciao\nciao\nciao\nciao\nciao\nciao\nciao"/-->

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.3"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/row_div"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorPrimary"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:layout_weight="0.01"
                android:orientation="vertical">

                <!--TextView
                    android:id="@+id/escape_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="center"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/colorPrimary" /-->

                <!--TextView
                    android:id="@+id/escape_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/colorPrimary"
                    android:autoLink="phone" /-->

                <ImageButton
                    android:id="@+id/escape_phone"
                    android:layout_width="@dimen/img_box_size_list"
                    android:layout_height="@dimen/img_box_size_list"
                    android:layout_gravity="center"
                    android:layout_alignParentTop="true"
                    android:layout_margin="20dp"
                    android:background="@drawable/phone_button"/>

                <ImageButton
                    android:id="@+id/escape_website"
                    android:layout_width="@dimen/img_box_size_list"
                    android:layout_height="@dimen/img_box_size_list"
                    android:layout_gravity="center"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="20dp"
                    android:layout_alignBottom="@+id/escape_phone"
                    android:background="@drawable/link_button" />

                <!--TextView
                    android:id="@+id/escape_website"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start|center_vertical"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:textColor="@color/colorPrimary" /-->

            </RelativeLayout>

            <com.google.android.gms.maps.MapView
                android:id="@+id/details_map"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.99" />
                <!--android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp" /-->

        </LinearLayout>

    </LinearLayout>

</LinearLayout>